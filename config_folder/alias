## alias list
alias v="vim"
alias pac="sudo pacman -S --noconfirm"
alias bp='acpi | grep -oP "(\d+)%"'
alias trash="trash-put"
alias trashcan="trash-list"
alias recycle="trash-restore"
alias l="ls -FpX --color=always --group-directories-first"
alias 0b="source $HOME/.bashrc"
alias mkdir="mkdir -p"
alias mv="mv -uv"
alias cp="cp -irv"
alias zip="zip -r -db"
alias fonts="fc-list :  family | sort | fzf"
alias vc="nvim $HOME/.config"
alias vw="nvim $HOME/files"
alias cs="clear"
alias rb="systemctl reboot"
alias po="sudo shutdown -h now"
alias ev="vim $HOME/.vim/vimrc"
alias bv="vim $HOME/.bashrc"
alias hist="bat $HOME/.history | grep"
alias e="exit"
alias t="toney"
alias wi-no="sudo systemctl stop NetworkManager"
alias wi-ya="sudo systemctl start NetworkManager"
alias gt="ghostty +list-themes"
alias fonts="fc-list  : family | sort | fzf | wl-copy"
alias hmm="h-m-m"
alias cb="clipse"
